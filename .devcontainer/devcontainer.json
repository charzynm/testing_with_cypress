{
    "name": "My Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:debian",
    "extensions": ["ms-vscode.vscode-typescript-tslint-plugin"],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "features": {
        "desktop-lite": {
            "password": "vscode", // Set your desired password
            "webPort": "6080", // Port for web access
            "vncPort": "5901" // Port for VNC access
        }
    },
    "runArgs": ["--shm-size=1g"], // Increase shared memory space
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y fluxbox", // Install Fluxbox
    "overrideCommand": false
}
